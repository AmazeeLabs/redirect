 * Implements hook_node_delete().
 */
function redirect_node_delete($node) {
  redirect_delete_by_entity_path('node', $node);
}

/**
 * Implements hook_taxonomy_term_delete().
 */
function redirect_taxonomy_term_delete($term) {
